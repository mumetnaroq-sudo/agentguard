// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id            String         @id @default(uuid())
  email         String         @unique
  clerkId       String         @unique
  createdAt     DateTime       @default(now())
  
  // Relations
  workspaces    Workspace[]
  subscriptions Subscription[]
}

model Workspace {
  id        String   @id @default(uuid())
  name      String
  ownerId   String
  tier      String   @default("free") // free, pro, enterprise
  
  // Relations
  owner     User     @relation(fields: [ownerId], references: [id], onDelete: Cascade)
  scans     Scan[]
  members   WorkspaceMember[]
}

model Scan {
  id          String    @id @default(uuid())
  workspaceId String
  status      String    @default("pending") // pending, running, completed, failed
  results     Json?
  createdAt   DateTime  @default(now())
  
  // Relations
  workspace   Workspace @relation(fields: [workspaceId], references: [id], onDelete: Cascade)
  reports     Report[]
}

model Report {
  id      String   @id @default(uuid())
  scanId  String
  format  String   // pdf, html, json
  url     String   // S3/storage URL to the report file
  
  // Relations
  scan    Scan     @relation(fields: [scanId], references: [id], onDelete: Cascade)
}

model Subscription {
  id                   String    @id @default(uuid())
  userId               String
  stripeSubscriptionId String?   @unique // Stripe subscription ID
  stripePriceId        String?   // Stripe price ID
  stripeCustomerId     String?   // Stripe customer ID
  tier                 String    @default("free") // free, pro, enterprise
  status               String    @default("active") // active, canceled, past_due, incomplete, etc.
  currentPeriodStart   DateTime? // Current billing period start
  currentPeriodEnd     DateTime? // Current billing period end
  cancelAtPeriodEnd    Boolean   @default(false) // Whether subscription cancels at period end
  canceledAt           DateTime? // When the subscription was canceled
  createdAt            DateTime  @default(now())
  updatedAt            DateTime  @updatedAt
  metadata             Json?     // Additional metadata

  // Relations
  user                 User      @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
  @@index([stripeSubscriptionId])
}

model WorkspaceMember {
  id          String    @id @default(uuid())
  workspaceId String
  userId      String
  role        String    // owner, admin, member
  invitedAt   DateTime  @default(now())
  joinedAt    DateTime?
  
  // Relations
  workspace   Workspace @relation(fields: [workspaceId], references: [id], onDelete: Cascade)
  user        User      @relation(fields: [userId], references: [id], onDelete: Cascade)
  
  @@unique([workspaceId, userId])
  @@index([workspaceId])
  @@index([userId])
}
